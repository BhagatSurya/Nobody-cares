extends layouts/main-layout.pug 

block style
        link(rel="stylesheet", href="/css/add-product.css")
        link(rel="stylesheet", href="/css/shop.css")

block content
    main.main-content
      if prodsdata.length > 0
        .grid
          each product in prodsdata
            article.card.product-item
              header.card__header
                  h1.product__title= product.title
              div.card__image
                img(src="https://cdn.pixabay.com/photo/2015/11/05/18/59/book-cover-1024644_1280.jpg", alt="A book")
              div.card__content
                h2.product__price Rs 19
                p.product_description A very interesting book
              .card__actions
                button.btn Add to Cart
      else
        h1 No products
